# Common authentication configuration
# This file is included by both ws and docs server blocks

# Authentication verification endpoint
location = /auth/verify {
    internal;
    proxy_pass http://workspace_workspaces_server/api/auth/verify;
    proxy_pass_request_body off;
    proxy_set_header Content-Length "";
    proxy_set_header X-Original-URI $request_uri;
    proxy_set_header Cookie $http_cookie;
}

# 502 error page for workspace starting
location = /workspace-starting.html {
    internal;
    alias /usr/share/nginx/html/workspace-starting.html;
    add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0" always;
    add_header Pragma "no-cache" always;
    add_header Expires "0" always;
}

